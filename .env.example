# Environment (docker/prod)
ENVIRONMENT=docker
SPRING_PROFILES_ACTIVE=${ENVIRONMENT}

# Database Configuration
# For local development (docker):
DB_HOST=db
DB_PORT=3306
DB_NAME=routine
DB_USERNAME=root
DB_PASSWORD=rootpassword

# For production, change to:
# DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
# DB_USERNAME=admin
# DB_PASSWORD=your-secure-password

# MySQL Root Password (for docker only)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=routine

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-for-production
JWT_EXPIRATION=86400000

# OAuth2 Kakao Configuration
KAKAO_CLIENT_ID=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=
# Note: Kakao doesn't require client secret for REST API

# CORS (Frontend URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redispassword

# Application Port
APP_PORT=8080