# Application
APP_PORT=8080
SPRING_PROFILES_ACTIVE=docker

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=routine
DB_USERNAME=root
DB_PASSWORD=your_db_password_here
JPA_HIBERNATE_DDL_AUTO=update

# MySQL Docker Configuration
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MYSQL_DATABASE=routine

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-for-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# OAuth2 Kakao Configuration
KAKAO_CLIENT_ID=your_kakao_client_id_here
OAUTH_REDIRECT_URI=http://localhost:3000/
OAUTH_CALLBACK_URI=http://localhost:8080/login/oauth2/code/kakao

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging Levels
LOG_LEVEL_SQL=INFO
LOG_LEVEL_SQL_BIND=INFO
LOG_LEVEL_APP=INFO

# Docker Deployment
DEPLOY_TAG=latest
DOCKER_IMAGE=46112/routine-it-backend